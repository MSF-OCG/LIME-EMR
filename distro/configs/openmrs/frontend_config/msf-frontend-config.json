{
  "@openmrs/esm-patient-chart-app": {
    "logo": {
      "src": "configs/header-logo.png"
    },
    "Display conditions": {
      "roles": [
        "Organizational: Nurse"
      ]
    },
    "extensionSlots": {
      "patient-chart-test-results-dashboard-slot": {
        "add": [
          "patient-flags-list"
        ],
        "configure": {
          "patient-flags-list": {
            "tags": [
              "Labs"
            ]
          }
        }
      }
    }
  },
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "configs/logo.png"
    },
    "footer": {
      "additionalLogos": [
        {
          "src": "configs/madiro-logo.png",
          "alt": ""
        },
        {
          "src": "configs/msf-logo.png",
          "alt": ""
        }
      ]
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "configs/header-logo.png"
    },
    "extensionSlots": {
      "patient-chart-dashboard-slot": {
        "remove": [
          "offline-tools-patient-chart-actions-dashboard-link"
        ]
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#D7211E",
    "Brand color #2": "#414141",
    "Brand color #3": "#D7211E"
  },
  "@openmrs/esm-form-builder-app": {
    "Display conditions": {
      "privileges": [
        "MSF Administrator"
      ]
    }
  },
  "@openmrs/esm-system-admin-app": {
    "Display conditions": {
      "privileges": [
        "MSF Administrator"
      ]
    }
  },
  "@openmrs/esm-patient-flags-app": {
    "tagActions": [
      {
        "tagName": "Vitals",
        "url":"${openmrsSpaBase}/patient/${patientUuid}/chart/Vitals & Biometrics"
      },
      {
        "tagName": "Labs",
        "url": "${openmrsSpaBase}/patient/${patientUuid}/chart/Results"
      },
      {
        "tagName": "Medications",
        "url":"${openmrsSpaBase}/patient/${patientUuid}/chart/Medications"
      },
      {
        "tagName": "High Risk Conditions",
        "url": "${openmrsSpaBase}/patient/${patientUuid}/chart/Conditions"
      },
      {
        "tagName": "Chronic Conditions",
        "url": "${openmrsSpaBase}/patient/${patientUuid}/chart/Conditions"
      },
      {
        "tagName": "Infectious Disease Conditions",
        "url": "${openmrsSpaBase}/patient/${patientUuid}/chart/Conditions"
      },
      {
        "tagName": "Procedures",
        "url":"${openmrsSpaBase}/patient/${patientUuid}/chart/Appointments"
      },
      {
        "tagName": "Appointments",
        "url":"${openmrsSpaBase}/patient/${patientUuid}/chart/Appointments"
      }
    ],
    "flagActions": [
      {
        "flagName": "Allergy",
        "url": "${openmrsSpaBase}/patient/${patientUuid}/chart/Allergies"
      }
    ],
    "priorities": [
      {
        "priority": "high",
        "color": "high-contrast",
        "isRiskPriority": true
      },
      {
        "priority": "medium",
        "color": "red",
        "isRiskPriority": false
      },
      {
        "priority": "low",
        "color": "orange",
        "isRiskPriority": false
      }
    ]
  }
}